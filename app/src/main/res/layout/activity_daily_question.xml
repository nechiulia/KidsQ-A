<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".DailyQuestionActivity">

    <TextView
        android:id="@+id/intrebarea_zilei_tv_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/intrebarea_zilei_tv_countdown"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/intrebarea_zilei_tv_timpramas"
        app:layout_constraintBottom_toTopOf="@+id/intrebarea_zilei_iv_original"/>

    <TextView
        android:id="@+id/intrebarea_zilei_tv_timpramas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/intrebarea_zilei_tv_str"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/intrebarea_zilei_iv_original"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/intrebarea_zilei_iv_poza2"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/intrebarea_zilei_tv_intrebare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intrebarea_zilei_tv_countdown"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/intrebarea_zilei_tv_intrebare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/intrebarea_zilei_tv_intrebare_str"
        app:layout_constraintBottom_toTopOf="@+id/intrebarea_zilei_rg_raspunsuri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/intrebarea_zilei_rg_raspunsuri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toTopOf="@+id/intrebarea_zilei_btn_confirm"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/intrebarea_zilei_rb_raspuns1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intrebarea_zilei_rb_raspuns1_str" />

        <RadioButton
            android:id="@+id/intrebarea_zilei_rb_raspuns2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intrebarea_zilei_rb_raspuns2_str" />

        <RadioButton
            android:id="@+id/intrebarea_zilei_rb_raspuns3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intrebarea_zilei_rb_raspuns3_str" />

    </RadioGroup>

    <Button
        android:id="@+id/intrebarea_zilei_btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intrebarea_zilei_rg_raspunsuri"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/intrebarea_zilei_btn_confirm_str"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/intrebarea_zilei_btn_incepe_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/intrebarea_zilei_btn_incepe"
        app:layout_constraintBottom_toTopOf="@+id/intrebarea_zilei_iv_original"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095" />
</android.support.constraint.ConstraintLayout>