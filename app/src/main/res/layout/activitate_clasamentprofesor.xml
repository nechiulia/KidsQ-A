<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/fundal"
    tools:context=".ClasamentProfesorActivitate">

    <TextView
        android:id="@+id/clasament_tv_clasament"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clasament Elevi"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:textSize="16dp"
        android:gravity="center"/>

    <ListView
        android:id="@+id/clasament_lv_eleviClasament"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/clasament_tv_clasament">
    </ListView>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"

        design:menu="@menu/menu_bottomnavigation"
        app:layout_constraintBottom_toBottomOf="parent">

    </android.support.design.widget.BottomNavigationView>


</android.support.constraint.ConstraintLayout>