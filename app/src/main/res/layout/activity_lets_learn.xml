<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yellow"
    tools:context=".Activities.LetsLearnActivity"
    android:weightSum="8"
    tools:ignore="MissingDefaultResource">

    <Button
        android:id="@+id/letslearn_btn_animals"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/invatam_btn_animale_text"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        />
    <Button
        android:id="@+id/letslearn_btn_fruits"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/invatam_btn_fructe_text"
        android:background="@drawable/rounded_button_general"

        />
    <Button
        android:id="@+id/letslearn_btn_vegetables"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_button"
        android:text="@string/invatam_btn_legume_text"/>
    <Button
        android:id="@+id/letslearn_btn_transport"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_button_general"
        android:text="@string/invatam_btn_transport_text"/>

    <Button
        android:id="@+id/letslearn_btn_time"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_button"
        android:text="@string/invatam_btn_timp_text"/>
    <Button
        android:id="@+id/letslearn_btn_colors"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_button_general"

        android:text="@string/invatam_btn_culori_text"/>
    <Button
        android:id="@+id/letslearn_btn_letters"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_button"

        android:text="@string/invatam_btn_litere_text"/>
    <Button
        android:id="@+id/letslearn_btn_digits"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_button_general"
        android:layout_marginBottom="4dp"
        android:text="@string/invatam_btn_cifre_text"/>
</LinearLayout>