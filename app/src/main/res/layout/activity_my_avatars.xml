<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".Activities.MyAvatarsActivity"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/myavatars_tv_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/avatare_disponibile_tv_alte_avatare"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myavatars_iv_myavatar" />

    <ImageView
        android:id="@+id/myavatars_iv_myavatar"
        android:layout_width="102dp"
        android:layout_height="89dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/avatarele_mele_iv_cd_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<LinearLayout
    android:id="@+id/my_avatars_layout_avatars_name"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:weightSum="3"
    android:layout_marginTop="24dp"
    app:layout_constraintTop_toBottomOf="@+id/myavatars_tv_buy"
    >

    <TextView
        android:id="@+id/myavatars_tv_avatar1_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="15sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_weight="1"
         />

    <TextView
        android:id="@+id/myavatars_tv_avatar2_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="15sp"
        android:textStyle="bold"
        android:gravity="center"
         />

    <TextView
        android:id="@+id/myavatars_tv_avatar3_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_weight="1"
        />
</LinearLayout>
    <LinearLayout
        android:id="@+id/myavatars_layout_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@id/my_avatars_layout_avatars_name">

        <ImageView
            android:id="@+id/myavatars_iv_avatar1"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="@string/avatarele_mele_iv_cd_avatar"
            />

        <ImageView
            android:id="@+id/myavatars_iv_avatar2"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/avatarele_mele_iv_cd_avatar"
            android:clickable="true"

           />

        <ImageView
            android:id="@+id/myavatars_iv_avatar3"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/avatarele_mele_iv_cd_avatar"
            android:clickable="true"
            />

    </LinearLayout>



    <TextView
        android:id="@+id/myavatars_tv_myavatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/avatare_tv_avatarulmeu_str"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintStart_toEndOf="@+id/myavatars_iv_myavatar"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/myavatars_btn_back"
        android:layout_width="59dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/myavatars_btn_add_from_pc"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_button"
        android:text="@string/myavatars_add_pc_avatar"
        app:layout_constraintBottom_toTopOf="@+id/myavatars_btn_buy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/myavatars_btn_buy"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_button"
        android:text="@string/avatare_disponibile_btn_cumpara_avatare"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>