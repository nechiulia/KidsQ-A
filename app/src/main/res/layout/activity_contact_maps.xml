<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".Activities.ContactMapsActivity"
    tools:ignore="MissingDefaultResource">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        map:cameraZoom="18"
        map:layout_constraintBottom_toTopOf="@+id/contact_btn_back"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        tools:context=".Activities.ContactMapsActivity" />

    <Button
        android:id="@+id/contact_btn_back"
        android:layout_width="59dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/contact_tv_echipa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="@string/contact_tv_echipa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contact_tv_nda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/contact_tv_echipa"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/contact_tv_nda"
        app:layout_constraintStart_toEndOf="@+id/contact_tv_echipa"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contact_tv_nge"
        android:layout_width="162dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/contact_tv_echipa"
        android:layout_toRightOf="@+id/contact_tv_echipa"
        android:text="@string/contact_tv_nge"
        app:layout_constraintStart_toEndOf="@+id/contact_tv_echipa"
        app:layout_constraintTop_toBottomOf="@+id/contact_tv_nda" />

    <TextView
        android:id="@+id/contact_tv_ni"
        android:layout_width="132dp"
        android:layout_height="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/contact_tv_echipa"
        android:layout_toRightOf="@+id/contact_tv_echipa"
        android:text="@string/contact_tv_ni"
        app:layout_constraintStart_toEndOf="@+id/contact_tv_echipa"
        app:layout_constraintTop_toBottomOf="@+id/contact_tv_nge" />

    <TextView
        android:id="@+id/contact_tv_nam"
        android:layout_width="197dp"
        android:layout_height="21dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/contact_tv_echipa"
        android:layout_toRightOf="@+id/contact_tv_echipa"
        android:text="@string/contact_tv_nam"
        app:layout_constraintStart_toEndOf="@+id/contact_tv_echipa"
        app:layout_constraintTop_toBottomOf="@+id/contact_tv_ni" />

    <TextView
        android:id="@+id/contact_tv_nic"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/contact_tv_echipa"
        android:layout_toRightOf="@+id/contact_tv_echipa"
        android:text="@string/contact_tv_nic"
        app:layout_constraintStart_toEndOf="@+id/contact_tv_echipa"
        app:layout_constraintTop_toBottomOf="@+id/contact_tv_nam" />

    <TextView
        android:id="@+id/contact_tv_facultate"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@+id/contact_tv_nic"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        android:text="@string/contact_tv_facultate"
        app:layout_constraintBottom_toTopOf="@+id/map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_tv_coordonator" />

    <TextView
        android:id="@+id/contact_tv_coordonator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/contact_tv_coordonator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_tv_nic" />

    <Button
        android:id="@+id/contact_btn_changeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/contact_streetView"
        app:layout_constraintBottom_toTopOf="@+id/map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_tv_facultate"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>